@model QuanLyKhoViewModels.Catalog.Products.ProductCreateExRequest

@{
    ViewData["Title"] = "Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />

<div class="wrapper wrapper--w680">
            <div class="card card-1">
                <div class="card-body">
                    <h2 class="title">Registration Info</h2>
                    <form asp-action="Sales" asp-controller="Product" method="POST">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row row-space">
                             <div class="col-2">
                                  <div class="input-group">
                                    <label asp-for="importID" class="control-label">Mã sản phẩm</label>
                                    <input asp-for="importID" class="input--style-1" type="text" readonly>
                                </div>
                                <span asp-validation-for="importID" class="text-danger"></span>
                             </div>
                              <div class="col-2">
                                   <div class="input-group">
                                        <label asp-for="Quantity" class="control-label">Số lượng bán</label>
                                    <input asp-for="Quantity" class="input--style-1" type="number">
                                    </div>
                                 <span asp-validation-for="Quantity" class="text-danger"></span>

                             </div>
                        </div>
                       
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label asp-for="ExDate" class="control-label"></label>
                                    <input asp-for="ExDate" class="input--style-1 js-datepicker" type="date">
                                </div>
                                 <span asp-validation-for="ExDate" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <div class="rs-select2 js-select-simple select--no-search">
                                        <select class="form-select" name="guestID" asp-items="ViewBag.Guest">
                                             <option disabled="disabled" selected="selected">--Chọn mã khách hàng--</option>
                                        </select>
                                         <div class="select-dropdown"></div>
                                    </div>
                                      <span asp-validation-for="GuestID" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                       
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                     <label  asp-for="SalesPrice" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$"  class="control-label">Giá bán</label>
                                    <input asp-for="SalesPrice" data-type="currency" class="input--style-1" type="number"readonly>
                                </div>
                                <span asp-validation-for="SalesPrice" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                      <label asp-for="debttotal"  class="control-label">Số tiền nợ</label>
                                    <input asp-for="debttotal" pattern="^\$\d{1,3}(,\d{3})*(\.\d+)?$" data-type="currency" class="input--style-1" type="number">
                                </div>
                                 <span asp-validation-for="debttotal" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row row-space">
                            <div class="col-2">
                                 <div class="p-t-20">
                            <button class="btn btn--radius btn--green" type="submit">Tạo hóa đơn</button>
                        </div>
                               
                            </div>
                            <div class="col-2">
                                <div class="p-t-20">
                                <input asp-action="Report" class="btn bg-primary btn--radius btn--dark " type="submit" value="Xuất hóa đơn"/>
                                </div>
                              
                            </div>
                        </div>

                       
                    </form>
                </div>
            </div>
        </div>


